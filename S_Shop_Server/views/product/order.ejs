<%- include('../inc/top') %>
<div class="container" style="min-height: 700px;" >
  <div class="row justify-content-center" style="margin-top: 10px;">
    <div class="col-md-6 text-center mb-5">
      <h2 class="heading-section"><b>Danh Sách Đơn Hàng</b></h2>
    </div>
  </div>
  <div style="margin-bottom: 20px;"> 
    <form action="/bill/seachBill" method="GET" role="search">
      <div class="input-group rounded">
        <input type="search" class="form-control rounded" placeholder="Search" name="name_product" aria-describedby="search-addon" />
        <button type="submit" style="display: inline-block;
                        line-height: 30px;
                        padding: 0 50px;
                        -webkit-transition: all 0.4s ease;
                        -o-transition: all 0.4s ease;
                        -moz-transition: all 0.4s ease;
                        transition: all 0.4s ease;
                        cursor: pointer;
                        font-size: 15px;
                        border-radius: 6px;
                        margin-left: 5px;
                        text-transform: uppercase;
                        font-weight: 700;
                        color: #fff;
                        background-color: blue;
                        font-family: inherit;">
          <i class="fa fa-search"></i>
        </button>
      </div>
    </form>
  </div>

  <div class="container">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#filterCollapse"
      aria-expanded="false" aria-controls="filterCollapse">
      Filter
    </button>
    <div class="collapse" id="filterCollapse">
      <div class="card card-body">
        <h4>Filter Options</h4>
        <form id="filterForm" action="/product/list/filter" method="get">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label for="size">Size:</label>
                <% var allSizes=[]; %>
                  <% listBill.forEach(function(product) { %>
                    <% if (product.list) { %>
                      <% product.list.forEach(function(size) { %>
                        <% if (!allSizes.includes(size.size)) { %>
                          <% allSizes.push(size.size); %>
                            <% } %>
                              <% }); %>
                                <% } %>
                                  <% }); %>
                                    <% var initialSizes=allSizes.slice(); %>
                                      <!-- Size Dropdown -->
                                      <select class="form-control" id="size" name="size">
                                        <option value="">All Sizes</option>
                                        <% initialSizes.forEach(function(size) { %>
                                          <option value="<%= size %>">
                                            <%= size %>
                                          </option>
                                          <% }); %>
                                      </select>
              </div>
            </div>

            <div class="col-md-2">
              <div class="form-group">
                <label for="minPrice">Min Price:</label>
                <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Min Price">
              </div>
            </div>

            <div class="col-md-2">
              <div class="form-group">
                <label for="maxPrice">Max Price:</label>
                <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Max Price">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <button type="submit" class="btn btn-primary">
                  Apply Filter
                </button>
              </div>
            </div>
          </div>
        </form>



      </div>
    </div>
  </div>

  <%- include('../inc/Choxacnhan') %>
  <div class="mt-3">

    <table id="myTable" class="table table-responsive-xl 3" >
      <thead class="thead-dark">
        <tr>
          <th scope="col">Tên người dùng</th>
          <th scope="col">Tên sản phẩm</th>
          <th scope="col" style="text-align: center;">Kích cỡ</th>
          <th scope="col" style="text-align: center;">Số lượng</th>
          <th scope="col">Tổng tiền</th>
          <th scope="col" style="text-align: center;">Trạng thái</th>
          <th scope="col"> Quản lý</th>
        </tr>
      </thead>
      <tbody>
        <% listBill.forEach(function(item) { %>
        <tr>
          <td><%= item.name %></td>
  
          <td style="width: 350px;">
            <% for (var i = 0; i < item.list.length; i++) { %>
              - <%= item.list[i].name_product %> <br>
            
            <% } %>
          </td>
          <td style="text-align: center;">
            <% for (var i = 0; i < item.list.length; i++) { %>
              <%= item.list[i].size %><br>
            <% } %>
          </td>
          <td style="text-align: center;">
            <% for (var i = 0; i < item.list.length; i++) { %>
              <%= item.list[i].quantity %><br>
            <% } %>
          </td>
          <td><%= item.total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
          <td>
            <% if (item.status === 0) { %>
              <p style="color: #007bff;font-weight: bold;text-align: center;">Chờ xác nhận</p>
          <% } 
          else if (item.status === 1) { %>
            Đã xác nhận
          <% } 
          else if (item.status === 2) { %>
            Đang giao
          <% }
          else if (item.status === 3) { %>
            Đã giao
          <% }
          else if (item.status === 4) { %>
            Hủy đơn
          <% }
          else if (item.status === 5) { %>
            Đã nhận hàng
          <% }
          else { %>
            Trạng thái: Khác
          <% } %>
        </td>
          <td>
            <div style="display: flex;
            align-items: center;
            gap: 10px;">
            <form action="/bill/updatebillPro/<%= item._id %>" method="post">
              <% if (item.status !== 1 && item.status !== 2&& item.status !== 3 && item.status !== 4) { %>
              <button type="submit" class="btn-primary btn-sm">
                <span>Xác nhận</span>
              </button>
              <% } %>
            </form>
            
            <form action="/bill/updatebillProHuy/<%= item._id %>" method="post">
              <% if (item.status == 1 && item.status !== 2&& item.status !== 3 && item.status !== 4) { %>
              <button type="submit" class="btn-primary btn-sm">
                <span>Hủy</span>
              </button>
              <% } %>
            </form>
            
            <!-- <form action="/bill/updatebillProGiaohang/<%= item._id %>" method="post">
              <% if (item.status === "Xác nhận"&& item.status !== "Đang giao"&& item.status !== "Đã giao"&& item.status !== "Đã nhận") { %>
              <button type="submit" class="btn-primary btn-sm" id="deliveryButton">
                <span>Giao hàng</span>
              </button>
              <% } %> 
            </form> -->
          </div>
          </td>
        </tr>
        <% }); %>
  
      </tbody>
    </table>
  </div>

 
</div>
<script>
  $(document).ready(function () {
    $("#filterForm").submit(function (event) {
      event.preventDefault(); // Prevent the form from submitting normally

      // Get the selected filter values
      var selectedSize = $("#size").val();
      var selectedColor = $("#color").val();
      var minPrice = $("#minPrice").val();
      var maxPrice = $("#maxPrice").val();

      // Construct the URL with the selected filter values
      var url = "/bill/listBillsXacnhan/filter?";

      //  if (selectedSize) {
      //    url += "size=" + selectedSize + "&";
      //  }
      if (selectedSize) {
        url += "size=" + selectedSize + "&";
      }
      if (minPrice) {
        url += "minPrice=" + minPrice + "&";
      }

      if (maxPrice) {
        url += "maxPrice=" + maxPrice + "&";
      }

      // Remove the trailing '&' if present
      if (url.endsWith("&")) {
        url = url.slice(0, -1);
      }

      // Redirect to the filtered page
      window.location.href = url;
    });
  });
</script>

<%- include('../inc/bottom') %>