<%- include('../inc/top') %>
    <div class="container">
        <div class="page-wrapper p-t-45 p-b-50">
            <div class="wrapper wrapper--w790">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title"> ADD USERS</h2>
                    </div>
                    <div class="card-body">
                        <form action="" method="POST">

                            <div class="form-row">
                                <div class="name">Email</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="input-group col-8">
                                            <input class="input--style-5" type="email" name="email" required>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="form-row m-b-55">
                                <div class="name">Username</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="col-8">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="username" name="username" required
                                                    minlength="6" maxlength="20">
                                                <label class="label--desc">username must be between 8-20
                                                    characters</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <div class="form-row m-b-55">
                                <div class="name">Password</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="col-8">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="password" name="password" required>
                                                <label class="label--desc">password</label>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="name">Fullname</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="input-group col-8">
                                            <input class="input--style-5" type="fullname" name="fullname" required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Phone</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="input-group col-8">
                                            <input class="input--style-5" type="phone" name="phone" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="name">DoB</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="input-group col-8">
                                            <input class="input--style-5" type="dob" name="dob" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Giới tính</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="input-group col-8">
                                            <label>
                                                <input class="input--style-5" type="radio" name="gender" value="male"
                                                    required>
                                                Nam
                                            </label>
                                            <label>
                                                <input class="input--style-5" type="radio" name="gender" value="female"
                                                    required>
                                                Nữ
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Role</div>
                                <div class="value">
                                    <div class="input-group">
                                        <div class="rs-select2 js-select-simple select--no-search">
                                            <select name="role" class="browser-default custom-select"
                                                style="width:200px;background-color: rgb(246, 248, 248);">
                                                <option disabled="disabled" selected="selected">Chọn vai trò</option>
                                                <option>Admin</option>
                                                <option>User</option>

                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button class="btn btn--radius-2 btn--green" type="submit">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('../inc/bottom') %>